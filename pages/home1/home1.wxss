Page {
  background-color: white;
}
.homeNav{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  /* height: 400rpx; */
}
.homeNavItem{
  width: 20%;
  margin-top: 20rpx;
  /* height: 180rpx; */
  text-align: center;
  font-size: 35rpx;
}
.homeNavItem>image{
  width: 100%;
  height: 80rpx;
}

.lunbo{
  width: 100%;
  height: 300rpx;
  margin: 30rpx 0;
}
.lunboBox{
  width: 95%;
  margin-left: 2.5%;
  height: 300rpx;
}
.lunboItem{
  height:300rpx
}
.lunboImg{
  width: 100%;
  height: 250rpx;
  border-radius: 25rpx;
}
.homeImgNav{
  width: 100%;
  height: 500rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.homeImgNav>image{
  width: 45%;
  height: 200rpx;
}
.homeCoursShow{
  width: 100%;
}
.homeCoursShow>text{
  margin-left: 2.5%;
}
.homeCourseShowBox{
  margin-top: 80rpx;
  width: 95%;
  margin-left: 2.5%;
  display: flex;
}
.homeCourseShowBoxLeft{
  width: 40%;
}
.homeCourseShowBoxLeft>image{
  width: 100%;
  height: 200rpx;
}
.homeCourseShowBoxRight{
  width: 60%;
  padding-left: 5%;
}
.homeCourseShowBoxRightTitle{
  font-size: 35rpx;
  font-weight: 600;
}
.homeCourseShowBoxRightGrade{
  border: 1px solid skyblue;
  border-radius: 15rpx;
  font-size: 25rpx;
}
.homeCourseShowBoxRight>view:nth-of-type(2){
  margin-top: 50rpx;
}
.homeCourseShowBoxRight>view:nth-of-type(3)>text:nth-of-type(1){
  font-size: 30rpx;
}
.homeCourseShowBoxRight>view:nth-of-type(3)>text:nth-of-type(2){
  font-weight: 600;
  color: hotpink;
  float: right;
  margin-right: 2.5%;
}